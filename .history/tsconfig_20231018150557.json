{
  // "extends": "@vue/tsconfig/tsconfig.web.json",
  "extends": ["./"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2017", "DOM"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
